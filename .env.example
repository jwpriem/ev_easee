# Neon Database URL
DATABASE_URL=postgresql://username:password@your-neon-host.neon.tech/neondb?sslmode=require

# Token encryption key (generate a random 32+ character string for production)
TOKEN_ENCRYPTION_KEY=your-token-encryption-key-here

# DigitalOcean API token (for Functions automation)
DO_API_TOKEN=dop_v1_your-digitalocean-api-token

# Public application URL (used by DO Functions to call the cron endpoint)
APP_URL=https://your-app.vercel.app
